<style>

  body {
    background: url(<%= randomized_background_image %>) no-repeat center center fixed;
  }

</style>

<%= render "devise/sessions/login_modal" %>

<div class="navbar-collapse collapse">
  <nav class="navbar-form navbar-right" role="navigation">
    <div>
      <% if employer_signed_in? %>
      <%= link_to 'Hiring? Post a job!', new_job_path, class: 'landing_page_login_link', value: 'create_job' %>
      <%= link_to 'Logout', destroy_employer_session_path, :method => :delete, class: 'landing_page_login_link' %>
      <% else %>
      <%= link_to 'Hiring? Post a job!', "#login", "data-toggle" => "modal", class: 'landing_page_login_link' %>
      <% end %>
      <%= javascript_include_tag 'application' %>
    </div>
  </nav>



  <div class="landingpageframe col-md-8 col-sm-8 col-xs-8 col-md-offset-2 col-sm-offset-2 col-xs-offset-2" >

    <div class="landingpageinnerframe col-md-10 col-sm-10 col-xs-10 col-md-offset-1 col-sm-offset-1 col-xs-offset-1"> 

      <ul id="landing_page_central_list">
        <li>
          <p><h1 id="landing_page_payoff">The instant-hiring platform. Get started!</h1></p>
        </li>
        <li>
          <form id="landing_page_search_box" method="post" class='landingpagesubmitbutton'>
            <input type="text" id="landing_page_searchTextField" placeholder="Find a job in..." class='form-control'>
            <input type="submit" style='visibility:hidden' value="Search" class='btn btn-primary'>
          </form>
        </li>
      </ul>

    </div>

  </div>

</div>



