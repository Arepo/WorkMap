<%= form_for @job do |job| %>
  <%= job.label :advert_title %>
  <%= job.text_field :advert_title %><br/>

  <%= job.label :category %>:
  <%= job.select :category, ['Bar', 'Restaurant', 'Hotel', 'Shop', 'Cafe', 'StripClub'] %><br/>

  <%= job.label :company %>:
  <%= job.text_field :company %><br/>

  <%= job.label :full_time %>:
  <%= job.select :full_time, ['Full Time', 'Part Time'] %><br/>

  <%= job.label :detail %>:
  <%= job.text_area :detail %><br/>

  <%= job.label :address %>:
  <%= job.text_field :address %><br/>

  <%= job.label :wage %>:
  <%= job.text_field :wage %><br/>

  <%= job.label :email %>:
  <%= job.email_field :email %><br/>

  <%= job.label :phone %>:
  <%= job.telephone_field :phone %><br/>

  <%= job.submit 'Post a job' %>
<% end %>