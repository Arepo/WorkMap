<div class="container-fluid">
	<div class="row">
		<div class="col-md-8">
			<div id="map">
			</div>
		</div>
		<div class="searchbox">
			<form id="search_box" method="post">
				<input type="text" id="searchTextField" placeholder="Address">
				<input type="submit" value="Search">
			</form>
			<form id="filter" method="post">
				<input type="checkbox" id="category_Bar" name="Bar_Box" value="Bar" checked>Bar<br>
				<input type="checkbox" id="category_Cafe" name="Cafe_Box" value="Cafe" checked>Cafe<br>
				<input type="checkbox" id="category_Hotel" name="Hotel_Box" value="Hotel" checked>Hotel<br>
				<input type="checkbox" id="category_Restaurant" name="Restaurant_Box" value="Restaurant" checked>Restaurant<br>
				<input type="checkbox" id="category_Shop" name="Shop_Box" value="Shop" checked>Shop<br>
				<input type="checkbox" id="category_StripClub" name="StripClub_Box" value="StripClub" checked>Strip Club<br>
			</form>
		</div>
		<div class="col-md-4">
			<aside class="advert_column">
				<% if @jobs.any? %>
				<% @jobs.each do |job| %>
				<ul>
					<div class="advert_info">
						<h1><%= job.advert_title %></h1>
						<p><%= job.category %> // 
							<%= job.company %> //
							<%= job.detail %> //
							<%= job.address %> //
							Â£<%= job.wage %> per hour //
							<%= job.email %> //
							<%= job.phone %>
						</p>
					</div>
				</ul>

				<% end %>
				<% else %>
				<h1>No jobs inserted yet.</h1>
				<% end %>
			</aside>
		</div>
	</div>