<div class="modal fade in" id="employer_login">

	<div class="modal-header">
		<button class="close close-employer-signin" data-dismiss="modal">x</button>
		<h2>Sign in to WorkMap!</h2>
	</div>

	<div class="modal-body">
		<%= form_for(employer, as: employer_name, url: session_path(employer_name)) do |f| %>

		<div>
			<p class="modal_form"><%= f.label :email, :class => 'form_control' %></p>
				<%= f.email_field :email, :autofocus => true, class: 'form-control' %>
		</div>

		<div>
			<p class="modal_form"><%= f.label :password %></p>
				<%= f.password_field :password, class: 'form-control' %><br>
		</div>

		<p class="modal_form">
		<%= f.submit "Sign in", :class => 'btn btn-small' %>
		</p>

		<% end %>
	</div>

	<div class="modal-footer">
		<%= link_to 'Do not have an account? Sign up!', "#employer_signup", "data-toggle" => "modal", :class => 'landing_page_login_link' %>
	</div>

</div>

